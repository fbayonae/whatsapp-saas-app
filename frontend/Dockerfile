FROM node:23.11.0-alpine3.19 AS build
WORKDIR /app

COPY package.json ./
RUN npm install
COPY . .
RUN npm run build

FROM nginx:alpine
RUN rm -rf /usr/share/nginx/html/*
COPY --from=build /app/dist /usr/share/nginx/html

# Configuraci√≥n para el panel admin
COPY infra/nginx/nginx.conf /etc/nginx/conf.d/